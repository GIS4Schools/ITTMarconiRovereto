<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_gravity="top|center"
        app:srcCompat="@drawable/qfield_marconi_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_gravity="top|center" />

    <Button
        android:id="@+id/btn_apri_sito_web"
        android:theme="@style/ColorButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Apri Sito Web"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="150dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/open_website_icon"
        app:iconGravity="top"
        app:iconSize="40dp"
        android:paddingTop="8dp"/>

    <Button
        android:id="@+id/btn_apri_qfield"
        android:theme="@style/ColorButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Apri Qfield"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="150dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/open_qfield_icon"
        app:iconGravity="top"
        app:iconSize="40dp"
        android:paddingTop="8dp"/>

    <Button
        android:id="@+id/btn_importa"
        android:theme="@style/ColorButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Importa Dati"
        android:layout_gravity="center"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="150dp"
        android:enabled="false"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/download_icon"
        app:iconGravity="top"
        app:iconSize="40dp"
        android:paddingTop="8dp"/>

    <Button
        android:id="@+id/btn_esporta"
        android:theme="@style/ColorButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Esporta Dati"
        android:layout_gravity="center"
        android:layout_marginTop="320dp"
        android:layout_marginStart="150dp"
        android:enabled="true"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/upload_icon"
        app:iconGravity="top"
        app:iconSize="40dp"
        android:paddingTop="8dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goToInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/arancio_qgis"
        app:borderWidth="5dp"
        app:srcCompat="@drawable/ic_baseline_help_24"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>